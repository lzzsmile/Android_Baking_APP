<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/recipe_step_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/recipe_step_no_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/video_placeholder"
                android:scaleType="fitXY"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:id="@+id/recipe_step_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            tools:text="4. Beat together the nutella, mascarpone, 1 teaspoon of salt, and 1 tablespoon of vanilla on medium speed in a stand mixer or high speed with a hand mixer until fluffy."
            android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>

</ScrollView>